SELECT 
	TBT_CONDICAO_PAGAMENTO.CodCondicaoPagamento AS Codigo
	, TBT_CONDICAO_PAGAMENTO.Descricao AS Descricao	
FROM TBT_CONDICAO_PAGAMENTO
INNER JOIN TBT_POLITICA_CONDICAO ON TBT_CONDICAO_PAGAMENTO.CodCondicaoPagamento = TBT_POLITICA_CONDICAO.CodCondicaoPagamento
WHERE TBT_POLITICA_CONDICAO.IndAtivo = 1
AND TBT_POLITICA_CONDICAO.CodPoliticaComercial = '@CodPoliticaComercial'