SELECT 
	TBT_TIPO_PEDIDO.CodTipoPedido AS Codigo
	, TBT_TIPO_PEDIDO.Descricao AS Descricao	
FROM TBT_TIPO_PEDIDO
INNER JOIN TBT_POLITICA_TIPO_PEDIDO ON TBT_TIPO_PEDIDO.CodTipoPedido = TBT_POLITICA_TIPO_PEDIDO.CodTipoPedido
WHERE TBT_POLITICA_TIPO_PEDIDO.IndAtivo = 1
AND TBT_POLITICA_TIPO_PEDIDO.CodPoliticaComercial = '@CodPoliticaComercial'